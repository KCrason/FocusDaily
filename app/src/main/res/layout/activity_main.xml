<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flayout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llayout_home_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="switchSelected"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_home_page"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:src="@drawable/home_page_normal"/>

            <TextView
                android:id="@+id/txt_home_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="首页"
                android:textSize="12sp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llayout_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="switchSelected"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_video"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:src="@drawable/video_normal"/>

            <TextView
                android:id="@+id/txt_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="视频"
                android:textSize="12sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_weitoutiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="switchSelected"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_weitoutiao"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:src="@drawable/weijiaodian_normal"/>

            <TextView
                android:id="@+id/txt_weitoutiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="微焦点"
                android:textSize="12sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="switchSelected"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_my"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:src="@drawable/my_normal"/>

            <TextView
                android:id="@+id/txt_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="我的"
                android:textSize="12sp"/>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>