<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="site.krason.focusdaily">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:name=".KApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.NewsDetailActivity"
                  android:theme="@style/AppThemeBlack.NoActionBar"
            ></activity>

        <activity android:name=".activities.SlidesActivity"
            android:theme="@style/AppThemeBlack.NoActionBar"></activity>

        <activity
            android:name=".activities.VideoActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppThemeBlack.NoActionBar"></activity>

        <activity
            android:name=".activities.FullScreenPlayVideoActivity"
            android:screenOrientation="landscape"
            android:theme="@style/FullScreenWindowStyle"></activity>

        <activity android:name=".activities.ProjectActivity"
            android:theme="@style/AppThemeBlack.NoActionBar"></activity>

        <activity android:name=".activities.TextLiveActivity"
            android:theme="@style/AppThemeBlack.NoActionBar"></activity>

        <activity android:name=".activities.WebViewActivity"
            android:theme="@style/AppThemeBlack.NoActionBar"></activity>

        <activity android:name=".activities.PreviewImagesActivty"
            android:theme="@style/AppThemeBlack.NoActionBar"></activity>

    </application>

</manifest>